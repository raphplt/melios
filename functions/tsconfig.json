{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["es2020"],
		"rootDir": "src",
		"outDir": "lib",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib"]
}
